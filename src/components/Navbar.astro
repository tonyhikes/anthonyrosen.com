<script>
    // --- Dark Mode Logic ---
    const themeToggleBtn = document.getElementById('theme-toggle');
    const mobileToggleBtn = document.getElementById('theme-toggle-mobile');
    
    // Icons
    const themeToggleDarkIcon = document.getElementById('theme-toggle-dark-icon');
    const themeToggleLightIcon = document.getElementById('theme-toggle-light-icon');
    
    const mobileDarkIcon = document.querySelector('.theme-icon-dark');
    const mobileLightIcon = document.querySelector('.theme-icon-light');

    function updateIcons() {
        const isDark = document.documentElement.classList.contains('dark');
        
        // Desktop
        if (isDark) {
            themeToggleDarkIcon?.classList.add('hidden');
            themeToggleLightIcon?.classList.remove('hidden');
        } else {
            themeToggleDarkIcon?.classList.remove('hidden');
            themeToggleLightIcon?.classList.add('hidden');
        }

        // Mobile
        if (isDark) {
            mobileDarkIcon?.classList.add('hidden');
            mobileLightIcon?.classList.remove('hidden');
        } else {
            mobileDarkIcon?.classList.remove('hidden');
            mobileLightIcon?.classList.add('hidden');
        }
    }

    function toggleMode() {
        const html = document.documentElement;
        html.classList.toggle('dark');
        
        const isDark = html.classList.contains('dark');
        localStorage.setItem('theme', isDark ? 'dark' : 'light');
        
        updateIcons();
        
        // Dispatch custom event to notify other components of theme change
        window.dispatchEvent(new CustomEvent('theme-changed', { 
            detail: { theme: isDark ? 'dark' : 'light' }
        }));
    }

    // Initialize
    updateIcons();
    
    // Event Listeners
    themeToggleBtn?.addEventListener('click', toggleMode);
    mobileToggleBtn?.addEventListener('click', toggleMode);

    // --- Mobile Menu Logic ---
    const btn = document.getElementById('mobile-menu-btn');
    const menu = document.getElementById('mobile-menu');
    
    btn?.addEventListener('click', (e) => {
        e.stopPropagation(); // Prevent immediate closing if we add document click listener
        menu?.classList.toggle('hidden');
    });

    // Close mobile menu when clicking outside
    document.addEventListener('click', (e) => {
        if (menu && !menu.classList.contains('hidden') && !btn?.contains(e.target as Node) && !menu.contains(e.target as Node)) {
            menu.classList.add('hidden');
        }
    });

    // --- Navigation Logic ---
    const navLinks = document.querySelectorAll('.nav-link');
    navLinks.forEach(link => {
        link.addEventListener('click', (e) => {
            const target = (e.currentTarget as HTMLElement).dataset.target;
            if (target) {
                window.dispatchEvent(new CustomEvent('view-change', { detail: target }));
                
                // Close mobile menu
                if (!menu?.classList.contains('hidden')) {
                    menu?.classList.add('hidden');
                }
            }
        });
    });

    // --- Navbar Transparency Logic ---
    function updateNavbarTransparency(viewId: string) {
        const nav = document.querySelector('nav');
        if (!nav) return;

        if (viewId === 'portfolio') {
            // Make solid for portfolio view to avoid color bleeding from white iframe
            nav.classList.remove('bg-white/80', 'dark:bg-slate-900/80', 'backdrop-blur-md');
            nav.classList.add('bg-white', 'dark:bg-slate-900');
        } else {
            // Make transparent for other views
            nav.classList.add('bg-white/80', 'dark:bg-slate-900/80', 'backdrop-blur-md');
            nav.classList.remove('bg-white', 'dark:bg-slate-900');
        }
    }

    window.addEventListener('view-change', (e: Event) => {
        const customEvent = e as CustomEvent;
        updateNavbarTransparency(customEvent.detail);
    });

    // Initial check
    const initialHash = window.location.hash.replace('#', '');
    if (initialHash === 'portfolio') {
        updateNavbarTransparency('portfolio');
    }
</script>
