<footer
	id="contact"
	class="relative z-50 border-t border-slate-800 bg-slate-900 px-4 pt-20 pb-10"
>
	<div class="mx-auto max-w-[85rem]">
		<!-- CTA Section -->
		<div class="mb-16 text-center">
			<h2 class="mb-8 text-3xl font-bold text-white md:text-4xl">
				Ready to get to work?
			</h2>
			<div class="flex justify-center gap-4">
				<a
					href="mailto:anthonyrosen@gmail.com"
					class="inline-flex items-center justify-center gap-x-2 rounded-full border border-transparent bg-blue-600 px-8 py-3 text-base font-semibold text-white shadow-lg shadow-blue-900/50 transition hover:bg-blue-700 disabled:pointer-events-none disabled:opacity-50"
				>
					Contact Me
				</a>
				<a
					href="https://linkedin.com/in/anthonyrosen"
					target="_blank"
					class="inline-flex items-center justify-center gap-x-2 rounded-full border border-white/20 bg-white/5 px-8 py-3 text-base font-semibold text-white backdrop-blur-sm transition hover:bg-white/10"
				>
					LinkedIn
				</a>
			</div>
		</div>

		<!-- Footer Columns -->
		<div
			class="mt-12 grid grid-cols-1 gap-12 border-t border-slate-800 pt-12 md:grid-cols-3"
		>
			<!-- Col 1: Brand -->
			<div class="flex flex-col gap-4">
				<a
					href="#home"
					data-target="home"
					class="footer-link group flex w-fit cursor-pointer items-center gap-2"
				>
					<div
						class="flex h-8 w-8 items-center justify-center rounded-lg bg-blue-600 font-black tracking-tighter text-white"
					>
						TR
					</div>
					<span class="text-lg font-bold text-white">Tony Rosen</span>
				</a>
				<p class="text-sm leading-relaxed text-slate-400">
					Marketing Project Manager & Creative Ops Specialist based in
					Minneapolis, MN.
				</p>
			</div>

			<!-- Col 2: Social -->
			<div class="flex flex-col gap-4">
				<p class="font-semibold text-white">Connect</p>
				<ul class="space-y-2 text-sm text-slate-400">
					<li>
						<a
							href="mailto:anthonyrosen@gmail.com"
							class="transition-colors hover:text-blue-400"
							>anthonyrosen@gmail.com</a
						>
					</li>
					<li>
						<a
							href="https://linkedin.com/in/anthonyrosen"
							target="_blank"
							class="transition-colors hover:text-blue-400">LinkedIn</a
						>
					</li>
					<li>612-281-2280</li>
				</ul>
			</div>

			<!-- Col 3: Site -->
			<div class="flex flex-col gap-4">
				<p class="font-semibold text-white">Site Info</p>
				<ul class="space-y-2 text-sm text-slate-400">
					<li>
						<button
							data-target="styleguide"
							class="footer-link text-left transition-colors hover:text-blue-400"
							>Style Guide</button
						>
					</li>
					<li>
						<button
							data-target="colophon"
							class="footer-link text-left transition-colors hover:text-blue-400"
							>Colophon</button
						>
					</li>
					<li>
						<a
							href="/privacy"
							class="transition-colors hover:text-blue-400"
							>Privacy Policy</a
						>
					</li>
					<li>
						<span class="text-slate-500"
							>&copy; <span id="year"></span> Tony Rosen.</span
						>
					</li>
					<li class="mt-4 text-xs text-slate-500">
						"Cotton Ball" (<a
							href="https://skfb.ly/oXBzx"
							target="_blank"
							class="hover:underline">https://skfb.ly/oXBzx</a
						>) by amhyde is licensed under Creative Commons Attribution (<a
							href="http://creativecommons.org/licenses/by/4.0/"
							target="_blank"
							class="hover:underline"
							>http://creativecommons.org/licenses/by/4.0/</a
						>).
					</li>
				</ul>
			</div>
		</div>
	</div>
</footer>

<script>
	const yearSpan = document.getElementById("year");
	if (yearSpan) {
		yearSpan.textContent = new Date().getFullYear().toString();
	}

	const footerLinks = document.querySelectorAll(".footer-link");
	footerLinks.forEach((link) => {
		link.addEventListener("click", (e) => {
			e.preventDefault();
			const target = (e.currentTarget as HTMLElement).dataset.target;
			if (target) {
				// Check if we're on the home page (/ or /index.html)
				const isHomePage = window.location.pathname === "/" ||
				                   window.location.pathname === "/index.html" ||
				                   window.location.pathname.endsWith("/");

				if (isHomePage) {
					// Use view switching for single-page navigation
					window.dispatchEvent(
						new CustomEvent("view-change", { detail: target })
					);
				} else {
					// Navigate to home page with hash for other pages
					window.location.href = target === "home" ? "/" : `/#${target}`;
				}
			}
		});
	});

	// Track special CTA clicks
	const contactBtn = document.querySelector('a[href^="mailto:"]');
	contactBtn?.addEventListener("click", () => {
		// eslint-disable-next-line @typescript-eslint/no-explicit-any
		if ((window as any).posthog) {
			// eslint-disable-next-line @typescript-eslint/no-explicit-any
			(window as any).posthog.capture("contact_me_clicked", {
				location: "footer",
			});
		}
	});

	const linkedinBtn = document.querySelector('a[href*="linkedin.com"]');
	linkedinBtn?.addEventListener("click", () => {
		// eslint-disable-next-line @typescript-eslint/no-explicit-any
		if ((window as any).posthog) {
			// eslint-disable-next-line @typescript-eslint/no-explicit-any
			(window as any).posthog.capture("linkedin_profile_clicked", {
				location: "footer",
			});
		}
	});
</script>
