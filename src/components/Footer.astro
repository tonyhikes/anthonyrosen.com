<footer id="contact" class="bg-slate-900 border-t border-slate-800 pt-20 pb-10 px-4">
    <div class="max-w-[85rem] mx-auto">
        
        <!-- CTA Section -->
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold text-white mb-8">Ready to get to work?</h2>
            <div class="flex justify-center gap-4">
                <a href="mailto:anthonyrosen@gmail.com" class="py-3 px-8 inline-flex justify-center items-center gap-x-2 text-base font-semibold rounded-full border border-transparent bg-blue-600 text-white hover:bg-blue-700 transition disabled:opacity-50 disabled:pointer-events-none shadow-lg shadow-blue-900/50">
                    Contact Me
                </a>
                <a href="https://linkedin.com/in/anthonyrosen" target="_blank" class="py-3 px-8 inline-flex justify-center items-center gap-x-2 text-base font-semibold rounded-full border border-white/20 bg-white/5 text-white hover:bg-white/10 transition backdrop-blur-sm">
                    LinkedIn
                </a>
            </div>
        </div>

        <!-- Footer Columns -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-12 border-t border-slate-800 pt-12 mt-12">
            <!-- Col 1: Brand -->
            <div class="flex flex-col gap-4">
                <a href="#home" data-target="home" class="footer-link flex items-center gap-2 group w-fit cursor-pointer">
                    <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center text-white font-black tracking-tighter">
                        TR
                    </div>
                    <span class="font-bold text-lg text-white">Tony Rosen</span>
                </a>
                <p class="text-slate-400 text-sm leading-relaxed">
                    Marketing Project Manager & Creative Ops Specialist based in Minneapolis, MN.
                </p>
            </div>

            <!-- Col 2: Social -->
            <div class="flex flex-col gap-4">
                <h4 class="text-white font-semibold">Connect</h4>
                <ul class="space-y-2 text-sm text-slate-400">
                    <li><a href="mailto:anthonyrosen@gmail.com" class="hover:text-blue-400 transition-colors">anthonyrosen@gmail.com</a></li>
                    <li><a href="https://linkedin.com/in/anthonyrosen" target="_blank" class="hover:text-blue-400 transition-colors">LinkedIn</a></li>
                    <li>612-281-2280</li>
                </ul>
            </div>

            <!-- Col 3: Site -->
            <div class="flex flex-col gap-4">
                <h4 class="text-white font-semibold">Site Info</h4>
                <ul class="space-y-2 text-sm text-slate-400">
                    <li><button data-target="styleguide" class="footer-link hover:text-blue-400 transition-colors text-left">Style Guide</button></li>
                    <li><button data-target="colophon" class="footer-link hover:text-blue-400 transition-colors text-left">Colophon</button></li>
                    <li><span class="opacity-50">&copy; <span id="year"></span> Tony Rosen.</span></li>
                </ul>
            </div>
        </div>
    </div>
</footer>

<script>
    const yearSpan = document.getElementById('year');
    if (yearSpan) {
        yearSpan.textContent = new Date().getFullYear().toString();
    }

    const footerLinks = document.querySelectorAll('.footer-link');
    footerLinks.forEach(link => {
        link.addEventListener('click', (e) => {
            e.preventDefault();
            const target = (e.currentTarget as HTMLElement).dataset.target;
            if (target) {
                window.dispatchEvent(new CustomEvent('view-change', { detail: target }));
            }
        });
    });
</script>
