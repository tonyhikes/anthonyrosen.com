    }
</style>

<script>
    const dropdownBtn = document.getElementById('download-menu-btn');
    const dropdownMenu = document.getElementById('download-menu');

    dropdownBtn?.addEventListener('click', (e) => {
        e.stopPropagation();
        dropdownMenu?.classList.toggle('hidden');
    });

    // Close dropdown when clicking outside
    document.addEventListener('click', (e) => {
        if (dropdownBtn && dropdownMenu && !dropdownBtn.contains(e.target as Node) && !dropdownMenu.contains(e.target as Node)) {
            dropdownMenu.classList.add('hidden');
        }
    });
</script>
